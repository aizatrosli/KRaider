<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kudakoding.aaizat.kraider.SettingActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KRaider v1.0"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="ip address"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="192.168.0.1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:text="mode"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/groupmode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/trainbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="train"
                android:textAllCaps="true"/>
            <RadioButton android:id="@+id/autobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="automation"
                android:textAllCaps="true"/>
            <RadioButton android:id="@+id/manualbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="manual"
                android:textAllCaps="true"/>
        </RadioGroup>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Joystick configuration"/>
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/groupjoy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/solobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="solo"
            android:textAllCaps="true"/>
        <RadioButton android:id="@+id/dualbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dual"
            android:textAllCaps="true"/>
    </RadioGroup>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/killbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kill"
        android:textAllCaps="true"
        android:textStyle="bold" />
        <Button
            android:id="@+id/backbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="back"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:id="@+id/savebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="save"
        android:textAllCaps="true"
        android:textStyle="bold" />


</LinearLayout>
</LinearLayout>
